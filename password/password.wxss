page{
  height: 100%;
  border-top:1px solid #eee;
}
.page{
  position: relative;
  height: 100%;
  background-color: #FFBFBF;
}

.veiw-container {
  width: 80%;
  margin:100rpx auto;
}

.view-title {
  text-align: center;
  padding: 20rpx 0;
}

.view-input {
  width: 70%;
  margin: 20rpx auto;
  height: 80rpx;
  border-radius: 36rpx;
  font-size: 30rpx;
  color: #666; 
  padding-left: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

 

 .write-again{
   text-align: center;
   color:#f40;
   font-size:26rpx;
   position: absolute;
   top:18%;
   left:50%;
   margin-left:-10%;
 }

.screen {
  position: fixed;
  bottom: 780rpx;
  word-wrap: break-word;
  width: 750rpx;
}

.screen view {
  color: #fff;
  font-size: 30px;
  text-align: right;
  margin-right: 30rpx;
}

.btnGroup {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.btn-item {
  width: 150rpx;
  text-align: center;
  line-height: 150rpx;
  border-radius: 50%;
}
 

.white {
  background: #efefed;
}
 

.bottom {
  position: fixed;
  bottom: 0;
}

button::after {
  border-radius: 0;
}

 .shadow {
  background: #999;
} 

button::after {
  border: none;
}

.forger-pass{
  float: right;
  font-size:24rpx;
  margin-right:10%;
  color:#2781D7
}